{
  "name": "koishi-plugin-work",
  "version": "1.0.0",
  "description": "Work Plugin for Koishi",
  "license": "MIT",
  "author": "yijie <yijie4188@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NWYLZW/koishi-plugin-work.git"
  },
  "homepage": "https://github.com/NWYLZW/koishi-plugin-work#readme",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "api": "yarn build:dec && api-extractor run && rimraf -g \"dist/{tool,views}/\"",
    "dev": "rollup -w -c --environment FORMAT:esm",
    "build": "rimraf dist/* && run-p build:esm build:umd build:min && yarn api",
    "build:esm": "rollup -c --environment FORMAT:esm",
    "build:umd": "rollup -c --environment FORMAT:umd",
    "build:min": "rollup -c --environment FORMAT:min",
    "build:dec": "tsc -p . --declaration --emitDeclarationOnly",
    "lint": "eslint src/**/*.{js,ts}",
    "test": "mocha test/**/*.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged & yarn test"
    }
  },
  "lint-staged": {
    "*./src/**/*.{js,ts,json,md}": [
      "yarn lint"
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "koishi": "^3.9.2",
    "koishi-adapter-onebot": "^3.0.8",
    "koishi-core": "^3.9.2",
    "koishi-plugin-mongo": "^2.2.2",
    "koishi-plugin-puppeteer": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@microsoft/api-extractor": "^7.13.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@types/chai": "^4.2.16",
    "@types/marked": "^2.0.2",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.41",
    "@types/node-sass": "^4.11.1",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "chai": "^4.3.4",
    "dayjs": "^1.10.4",
    "eslint": "^7.23.0",
    "eslint-plugin-mocha": "^8.1.0",
    "highlight.js": "^10.7.2",
    "html-entities": "^2.3.2",
    "husky": "^6.0.0",
    "koishi-test-utils": "^6.0.0-beta.11",
    "lodash.merge": "^4.6.2",
    "marked": "^2.0.3",
    "mocha": "^8.3.2",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "pngjs": "^6.0.0",
    "querystring": "^0.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.44.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4",
    "uuid": "^8.3.2"
  },
  "keywords": [
    "bot",
    "qqbot",
    "cqhttp",
    "coolq",
    "chatbot",
    "koishi",
    "plugin",
    "work"
  ]
}
